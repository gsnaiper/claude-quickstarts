{
  "name": "Computer Use Demo",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "usernamehw.errorlens",
        "streetsidesoftware.code-spell-checker",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "none",
        "[python]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          }
        },
        "python.analysis.typeCheckingMode": "basic"
      }
    }
  },

  // Features to add to the dev container
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  },

  // Forward ports for Streamlit and VNC
  "forwardPorts": [8501, 5900, 6080, 8080],
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "notify"
    },
    "5900": {
      "label": "VNC Server",
      "onAutoForward": "silent"
    },
    "6080": {
      "label": "noVNC Web Interface",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "HTTP Server",
      "onAutoForward": "silent"
    }
  },

  // Set environment variables
  // IMPORTANT: Never commit sensitive tokens directly in this file
  // Instead, use one of these secure methods:
  // 1. GitHub Codespaces Secrets (recommended for GitHub Codespaces)
  // 2. Local .env file (add to .gitignore)
  // 3. Pass via docker run -e flag
  // 4. Use remoteEnv to reference local environment variables
  "remoteEnv": {
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "API_PROVIDER": "${localEnv:API_PROVIDER:-anthropic}",
    "WIDTH": "${localEnv:WIDTH:-1024}",
    "HEIGHT": "${localEnv:HEIGHT:-768}"
  },

  // Mount docker socket for docker-in-docker
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  // Run as root to access docker socket
  "remoteUser": "root",

  // Use 'postCreateCommand' to run commands after the container is created
  "postCreateCommand": "pip install --upgrade pip && pip install -r computer_use_demo/requirements.txt && pip install ruff pyright pytest",

  // Use 'postStartCommand' to run commands after the container starts
  "postStartCommand": "echo 'üñ•Ô∏è  Computer Use Demo Dev Container Ready! Build with: docker build . -t computer-use-demo:local'",

  // Increase shared memory for better performance
  "runArgs": ["--shm-size=2g"],

  // Enable privileged mode for docker-in-docker
  "privileged": true
}
